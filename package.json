{
    "name": "larecolte-error-middleware",
    "version": "0.1.0",
    "description": "Shared Node error handling middlewares",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "test": "npx jest",
        "lint": "npx eslint --fix --ext .ts ./src",
        "format": "npx prettier --write \"src/**/*.ts\"",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/la-recolte/node-error-middleware.git"
    },
    "author": "La Recolte Digital",
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/la-recolte/node-error-middleware/issues"
    },
    "homepage": "https://gitlab.com/la-recolte/node-error-middleware#readme",
    "jest": {
        "transform": {
            "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/jest": "^25.1.1",
        "@types/node": "^13.5.3",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^25.1.0",
        "prettier": "^1.19.1",
        "ts-jest": "^25.2.0",
        "typescript": "^3.7.5"
    }
}
